extend components/template.pug
block css
    link(rel="stylesheet", href="../static/css/public-registro.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
block title
    title elart | Registro de administrador
block contents
    main.registro
        img(src="", alt="Logo de elart") 
        h4 Agregar administrador
        form.login__form(action="" method="POST") 
            label.form__label(for="nombre")
                span Nombre:
                input.form__input(type="text" placeholder="ingrese su nombre" name="nombre" required)
            label.form__label(for="correo")
                span Correo electronico:
                input.form__input(type="text" placeholder="ingrese un correo electronico" name="correo" required)
            label.form__label(for="contraseña")
                span Contraseña:
                input.form__input(type="password" placeholder="Ingrese una contraseña" name="password" required)
            button.button--brown(type="submit") Guardar
        img(src="", alt="Logo de Alfonso Marina")
