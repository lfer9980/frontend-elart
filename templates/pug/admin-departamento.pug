extend components/template.pug
block css 
block title
	title elart | administrar departamentos
block contents
	include components/sidebar-admin.pug
	main.form
		.form__agregar
			h2 Agregar Departamento:
			form(action="" method="POST")
				label(class="form__label" for="departamento")
					span Nombre:
					input.form__input(type="text" placeholder="Ingrese el nombre del departamento" name="departamento" required)
				button.button--brown(type="submit") Crear departamento
		.form__editar
				h2 Editar departamento:
				form(action="" method="POST")
				label(class="form__label" for="departamento")
					span Nombre:
					input.form__input(list ="departamentos" name = "departamento")
					datalist(id="departamentos")
						option(value="valor dummie")
				button.button--brown(type="submit") Crear departamento

block scripts