extend components/template.pug
block css 
	link(rel="stylesheet", href="../static/css/admin-departamento.css")
	link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
block title
	title elart | administrar departamentos
block contents
	include components/sidebar-admin.pug
	main.form
		.form__agregar
			h2 Agregar Departamento:
			form(action="/api/v1/admin/crear/departamento" method="POST" autocomplete = "off")
				label(class="form__label" for="departamento")
					span Nombre del departamento:
					input.form__input(type="text" placeholder="Ingrese el nombre del departamento" name="departamento" required)
				button.button--brown(type="submit") Crear departamento
		.form__editar
			h2 Editar departamento:
			form(action="/api/v1/admin/eliminar/departamento" method="POST" autocomplete = "off")
				label(class="form__label" for="departamento")
					span Nombre del departamento:
					input.form__input(list ="departamentos" name = "departamento")
					datalist(id="departamentos")
						option(value="valor dummie")
				button.button--brown(type="submit") ELIMINAR departamento

block scripts